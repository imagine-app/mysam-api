{
  "compilerOptions": {
    "incremental": true,
    "declaration": true,
    "allowJs": true,
    "esModuleInterop": true,
    "outDir": "out",
    // below the defaults for both CJS & the VSCode plugin (overriden in sub-configs)
    "target": "ES2015",
    "moduleResolution": "Node",
    "lib": [
      "dom",
      "ES2015"
    ]
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules",
    "dist",
  ],
}
